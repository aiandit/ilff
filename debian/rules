#!/usr/bin/make -f

export DH_VERBOSE = 1
export DEB_BUILD_MAINT_OPTIONS = hardening=+all

export PYBUILD_DESTDIR_python3=debian/python3-ilff/

export PYBUILD_AFTER_BUILD = make -C src DESTDIR=../debian/tmp
export PYBUILD_AFTER_INSTALL = make -C src install DESTDIR=../debian/tmp

%:
	dh $@ --with python3 --buildsystem=pybuild
